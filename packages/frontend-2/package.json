{
  "name": "@speckle/frontend-2",
  "description": "Speckle frontend build w/ Vue 3 & Nuxt 3",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint:js": "eslint --ext \".js,.ts,.vue\" .",
    "lint:tsc": "vue-tsc --noEmit",
    "lint:prettier": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --check .",
    "lint:css": "stylelint \"**/*.{css,vue}\"",
    "lint": "yarn lint:js && yarn lint:tsc && yarn lint:prettier && yarn lint:css"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.3",
    "@heroicons/vue": "^2.0.12",
    "@speckle/shared": "workspace:^",
    "lodash-es": "^4.17.21",
    "vee-validate": "^4.7.0"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^5.3.5",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.7",
    "@types/eslint": "^8.4.5",
    "@types/lodash-es": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-nuxt": "^3.2.0",
    "eslint-plugin-vue": "^9.5.1",
    "eslint-plugin-vuejs-accessibility": "^1.2.0",
    "nuxt": "3.0.0-rc.11",
    "postcss-html": "^1.5.0",
    "postcss-nesting": "^10.2.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^26.0.0",
    "typescript": "^4.8.3",
    "vue-tsc": "^1.0.8"
  },
  "engines": {
    "node": "^16.0.0"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
